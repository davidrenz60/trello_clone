#modal-layer
  display: none
  position: fixed
  width: 100%
  height: 100%
  overflow-y: auto
  background: rgba(0,0,0,0.5)
  z-index: 2

#card-detail
  box-sizing: border-box
  position: relative
  background-color: #edeff0
  border-radius: 3px
  width: 730px
  z-index: 3
  left: 50%
  margin: 50px 0 0 -365px
  padding: 0 0 25px 0
  &:after
    clear: both
    content: ""
    display: block
  h3
    font-size: 16px
    color: #4d4d4d
    margin: 0 0 6px 0
  h4
    font-weight: normal
    display: inline-block
    margin: 0px 7px 7px 0px
    font-size: 14px
    color: #8c8c8c
    + a
      text-decoration: underline
      font-size: 14px
      color: #8c8c8c
  textarea
    border: none
    width: 500px
    color: #4d4d4d
    box-sizing: border-box
    resize: none
    &:focus
      outline: none
  .title-detail
    overflow: hidden
    padding: 20px 0 10px 0px
    a
      margin-left: 5px;
      position: relative;
      top: 7px;
      display: inline-block;
      color: #8c8c8c;
      text-decoration: underline;
      cursor: pointer
    textarea
      background: 0 0
      border-radius: 3px
      box-shadow: none
      font-size: 18px
      font-weight: 700
      height: 35px
      line-height: 22px
      margin: -4px -6px
      min-height: 22px
      padding: 4px 6px
      resize: none
      &:focus
        background: #ffffff
  .detail-header
    padding-left: 50px
    .fa-close
      right: 0px
      top: 5px
      cursor: pointer
    .card-labels
      float: left
      max-width: 480px
    .card-label-box
      width: 30px
      height: 30px
      border-radius: 3px;
      box-sizing: border-box;
      float: left;
      margin: 0 4px 4px 0;
      cursor: pointer
    .due-date
      float: left
      position: relative
      background: #298FCA
      padding: 9px 9px
      vertical-align: middle
      color: #ffffff
      p
        padding-left: 30px
      i
        color: #ffffff
        top: 2px
      a
        color: #fff
        font-size: 10px
  .detail-list-info
    position: relative
    margin: 5px 0 15px 0
    padding-left: 3px
  .fa
    position: absolute
    height: 30px
    font-size: 20px
    line-height: 30px
    width: 30px
    color: #999
  .fa-eye
    position: relative;
    left: 5px;
    top: 3px;
  .fa-envelope-open
    left: 15px
    top: 18px
  .detail-main
    float: left
    overflow-x: hidden
    overflow-y: auto
    box-sizing: border-box
    margin: 0
    min-height: 20px
    padding: 8px 9px 9px 50px
    position: relative
    width: 529px
    .fa-close
      left: 85px
      cursor: pointer
  .description
    margin: 0 0 30px 0
    form
      display: none
      position: relative
      top: -23px
    textarea
      font-size: 15px
      height: 100px
      padding: 5px 8px
      box-shadow: 0 1px 3px rgba(0,0,0,.33)
      margin-bottom: 5px
    input[type="submit"]
      submitButton()
  .comments
    margin: 0 0 30px 0
    .fa-comment-o
      position: relative
      left: -143px
    textarea
      height: 70px
      font-size: 15px
      padding: 5px 8px
      box-shadow: 0 1px 3px rgba(0,0,0,.33)
      margin: 0 0 15px 0
    input[type="submit"]
      submitButton()

  .activity
    li
      border-bottom: 1px solid #cdd2d4
      margin: 0 0 20px 0
    &:last-of-type
      border: none
    .fa-newspaper-o
      position: relative
      left: -92px
    p.comment-desc
      background: #ffffff
      padding: 10px
      margin: 0 0 8px 0
      box-shadow: 0 1px 3px rgba(0,0,0,.33)
    p.action-desc
      margin: 0 0 8px 0
    p.timestamp
      display: inline-block
      font-size: 12px
      color: #8c8c8c
      margin: 0 5px 10px 0
    a
      text-decoration: underline
      font-size: 11px
      cursor: pointer
      margin-left: 5px
      color: #8c8c8c
    span
      font-weight: bold
  .detail-list-info
    p.move-list-action
      color: #8c8c8c
      text-decoration: underline
      cursor: pointer
      display: inline-block
  .detail-sidebar
    float: right
    padding: 8px 9pt 9pt 0
    width: 140px
    #pick-date
      position: relative
      cursor: pointer
    .add-options
      .menu-button
        box-sizing: border-box
        color: #444
        font-weight: bold
        border: 1px solid #E2E4E6
        border-bottom-color: #CDD2D4
        border-radius: 3px
        background: linear-gradient(to bottom,#fff 0,#F8F9F9 100%)
        cursor: pointer
        display: block
        height: 34px
        margin-top: 6px
        max-width: 300px
        padding: 9px 0 0 40px
        position: relative
        .fa-eye
          top: 0
        &:hover
          background: #298FCA
          border-color: #298FCA #298FCA #026AA7
          color: #ffffff
          i
            color: #ffffff
      .ui-datepicker-trigger
        display: block
        box-sizing: border-box
        border: 1px solid #e2e4e6
        border-bottom-color: #cdd2d4
        border-radius: 3px
        background: linear-gradient(to bottom, #fff 0, #f8f9f9 100%)
        cursor: pointer
        height: 34px
        margin: 0
        overflow: hidden
        padding: 8px 36px 8px 37px;
        margin-top: 5px
        position: relative
        font-size: 14px
        color: #444
        font-weight: bold
        &:hover
          background: #298FCA
          border-color: #298FCA #298FCA #026AA7
          color: #ffffff
          + i
            color: #ffffff
      i
        left: 10px
        bottom: 0
      i.fa-check
        left: 110px
        color: #5aac44
      h3:last-of-type
        margin-top: 25px
      input
        top: -35px
        height: 31px
        width: 135px
  #copy-card
    top: 318px
    left: 577px
    p

    #copy-card-title
      textarea
        font-size: 14px
        width: 100%
        background-color: #E2E4E6;
        border: 1px solid #CDD2D4;
  #move-card,
  #copy-card
    position: absolute
    box-sizing: border-box
    background: #fff
    border-radius: 3px
    border: 1px solid #D6DADC
    border-bottom-color: #C4C9CC
    box-shadow: 0 1px 6px rgba(0,0,0,.15)
    width: 310px;
    padding: 10px
    z-index: 3;
    p
      text-align: center
      color: #8c8c8c
      margin: 10px 0
    i.fa-close
      cursor: pointer
      right: -5px
      top: 7px
    div.select-div
      width: 100%;
      height: 50px;
      background: -webkit-linear-gradient(top,#fff 0,#F8F9F9 100%);
      background: linear-gradient(to bottom,#fff 0,#F8F9F9 100%);
      box-sizing: border-box;
      border: 1px solid #E2E4E6;
      border-bottom-color: #CDD2D4;
      cursor: pointer;
      margin-top: 6px;
      overflow: hidden;
      padding: 7px;
      position: relative;
      text-overflow: ellipsis;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      white-space: nowrap;
      span
        font-weight: bold
        display: block
      span.label
        color: #8c8c8c
        font-size: 9px
      span.value
        color: #4d4d4d
        font-size: 18px
    div.list-select
      display: inline-block
      margin-right: 10px
      width: 200px
    div.position-select
      display: inline-block
      width: 78px
    select
      cursor: pointer;
      height: 50px;
      left: 0;
      margin: 0;
      opacity: 0;
      position: absolute;
      top: 0;
      z-index: 2;
      width: 100%;
    input[type="submit"]
      display: block
      margin: 5px 0 0 0
      submitButton()