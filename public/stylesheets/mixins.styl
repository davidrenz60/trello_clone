textInput()
  padding: 5px
  font-size: 14px
  box-sizing: border-box
  background: rgba(0,0,0,.05);
  box-shadow: inset 0 1px 8px rgba(0,0,0,.15)
  border: 1px solid #aaa;
  border-radius: 3px;
  &:focus
    outline: none

submitButton()
  cursor: pointer
  background: -webkit-linear-gradient(top,#61BD4F 0,#5AAC44 100%);
  box-shadow: 0 1px 0 #3F6F21;
  color: #fff;
  border: none
  border-radius: 3px
  padding: 6px 18px
  font-size: 14px