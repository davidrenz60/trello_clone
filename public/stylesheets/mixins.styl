colors = {
  headerDark: #0094ae,
  headerLight: #4cb4c6,
  headerText: #edf3f5,
  headerHighlight: #5fbccc,
  boardHeaderText: #f6f6f6,
  mainBg: #00aecc
  addList: #009ab4
  addListText: #b3e1e9,
  addListHover: #007a8f,
  listTitle: #4d4d4d,
  listBg: #e2e4e6,
  listDots: #9c9c9c,
  listGreyHover: #cdd2d4,
  listAddText: #919292,
  listText: #555555,
