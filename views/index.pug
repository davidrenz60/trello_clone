extends layout

block content
  div#modal-layer
    div#card-detail
  header
    div#header-left
      a.header-button-boards(href='#') Boards
        i.fa.fa-trello
    div#header-search
      input(type="text")
      i.fa.fa-search
    a.header-logo(href="/")
    div#header-right
      a.header-button-plus(href='#') +
      a.header-button-user(href='#') <span id=user-icon>U</span>user
      a.header-button-info(href='#')
        i.fa.fa-info-circle
      a.header-button-alerts(href='#')
        i.fa.fa-bell-o
  main
    div#board-header
      div#board-header-left
        h2
          a(href='#') My Board
        i.fa.fa-star-o
        div.button-private
          i.fa.fa-lock
      div#board-header-right
        div.button-board-menu
          i.fa.fa-ellipsis-h
          a(href="#") Show Menu
    div#lists-container
      div#lists
      div#add-list