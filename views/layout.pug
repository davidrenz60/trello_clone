include /_mixins

doctype html
html
  head
    title Trello Clone
    +font_awesome_link_tag
    +jquery_css_tag
    +stylesheet_link_tag('application')
    +javascript_include_tag('vendor/all')
    +javascript_include_tag('handlebars_templates')
  body
    div#modal-layer
      div#card-detail
    header
      div#header-left
        a.header-button-boards(href='#') Boards
          i.fa.fa-trello
      div#header-search
        input(type="text")
        i.fa.fa-search
      a.header-logo(href="/")
      div#header-right
        a.header-button-plus(href='#') +
        a.header-button-user(href='#') <span id=user-icon>U</span>user
        a.header-button-info(href='#')
          i.fa.fa-info-circle
        a.header-button-alerts(href='#')
          i.fa.fa-bell-o
    main
      div#board-header
        div#board-header-left
          h2
            a(href='#') My Board
          i.fa.fa-star-o
          div.button-private
            i.fa.fa-lock
        div#board-header-right
          div.button-board-menu
            i.fa.fa-ellipsis-h
            a(href="#") Show Menu
      div#lists-container
        div#lists
        div#add-list
      block content
    +javascript_include_tag('application')
    +javascript_include_tag('models/list', 'models/card', 'models/comment', 'models/label')
    +javascript_include_tag('collections/lists', 'collections/cards', 'collections/comments', 'collections/labels')
    +javascript_include_tag('views/list', 'views/addList', 'views/listActions', 'views/cards', 'views/moveAllCards', 'views/cardDetail', 'views/moveCard', 'views/copyCard', 'views/labels', 'views/search')
    script(type="text/javascript").
      App.lists = new Lists(!{JSON.stringify(lists)});
      App.labels = new Labels(!{JSON.stringify(labels)});
      App.init();
    +javascript_include_tag('router')
